{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base","airbnb-typescript/base","prettier","plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": ["./tsconfig.eslint.json"],
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint","prettier"
    ],
    "rules": {
        "import/prefer-default-export": "off",
        "linebreak-style":["error", "windows"],
        "no-console": "warn",
        "prettier/prettier": [
            "error",{
                "endOfLine": "auto"
            }
        ],
        "max-classes-per-file": "off"
    }
}
